<p id="notice"><%= notice %></p>
<div class="container">
  <% if @posts.present? %>
    <%= render @posts %>
  <% else %>
    <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
  <% end %>
  <div class="card-footer">
    <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
  </div>
</div>

